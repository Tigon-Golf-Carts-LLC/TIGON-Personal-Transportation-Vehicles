<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <square70x70logo src="https://tigonptv.com/favicon-70.png"/>
      <square150x150logo src="https://tigonptv.com/favicon-150.png"/>
      <wide310x150logo src="https://tigonptv.com/favicon-310.png"/>
      <square310x310logo src="https://tigonptv.com/favicon-310.png"/>
      <TileColor>#af1b30</TileColor>
    </tile>
    <badge>
      <polling-uri src="https://tigonptv.com/api/badge"/>
      <frequency>30</frequency>
    </badge>
    <notification>
      <polling-uri src="https://tigonptv.com/api/notifications"/>
      <frequency>60</frequency>
      <cycle>1</cycle>
    </notification>
    <task>
      <name>Inventory Update</name>
      <frequency>daily</frequency>
      <uri>https://tigonptv.com/inventory</uri>
    </task>
    <task>
      <name>Service Appointments</name>
      <frequency>daily</frequency>
      <uri>https://tigonptv.com/services</uri>
    </task>
    <jumplist>
      <task>
        <name>Browse Personal Transportation Vehicles</name>
        <description>View our complete PTV vehicle inventory</description>
        <arguments>https://tigonptv.com/inventory</arguments>
        <iconUri>https://tigonptv.com/favicon-96.png</iconUri>
      </task>
      <task>
        <name>Contact Sales</name>
        <description>Get in touch with our sales team</description>
        <arguments>https://tigonptv.com/contact</arguments>
        <iconUri>https://tigonptv.com/favicon-96.png</iconUri>
      </task>
      <task>
        <name>Schedule Service</name>
        <description>Book maintenance or repair service</description>
        <arguments>https://tigonptv.com/services</arguments>
        <iconUri>https://tigonptv.com/favicon-96.png</iconUri>
      </task>
      <task>
        <name>Rental Information</name>
        <description>Learn about our rental programs</description>
        <arguments>https://tigonptv.com/rentals</arguments>
        <iconUri>https://tigonptv.com/favicon-96.png</iconUri>
      </task>
      <task>
        <name>Financing Options</name>
        <description>Explore flexible payment plans</description>
        <arguments>https://tigonptv.com/financing</arguments>
        <iconUri>https://tigonptv.com/favicon-96.png</iconUri>
      </task>
    </jumplist>
  </msapplication>
</browserconfig>
