<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <square70x70logo src="/favicon-70.png"/>
      <square150x150logo src="/favicon-150.png"/>
      <wide310x150logo src="/favicon-310.png"/>
      <square310x310logo src="/favicon-310.png"/>
      <TileColor>#af1b30</TileColor>
    </tile>
    <badge>
      <polling-uri src="/api/badge"/>
      <frequency>30</frequency>
    </badge>
    <notification>
      <polling-uri src="/api/notifications"/>
      <frequency>60</frequency>
      <cycle>1</cycle>
    </notification>
    <task>
      <name>Inventory Update</name>
      <frequency>daily</frequency>
      <uri>/inventory</uri>
    </task>
    <task>
      <name>Service Appointments</name>
      <frequency>daily</frequency>
      <uri>/services</uri>
    </task>
    <jumplist>
      <task>
        <name>Browse Private Transportation Vehicles</name>
        <description>View our complete PTV vehicle inventory</description>
        <arguments>/inventory</arguments>
        <iconUri>/favicon-96.png</iconUri>
      </task>
      <task>
        <name>Contact Sales</name>
        <description>Get in touch with our sales team</description>
        <arguments>/contact</arguments>
        <iconUri>/favicon-96.png</iconUri>
      </task>
      <task>
        <name>Schedule Service</name>
        <description>Book maintenance or repair service</description>
        <arguments>/services</arguments>
        <iconUri>/favicon-96.png</iconUri>
      </task>
      <task>
        <name>Rental Information</name>
        <description>Learn about our rental programs</description>
        <arguments>/rentals</arguments>
        <iconUri>/favicon-96.png</iconUri>
      </task>
      <task>
        <name>Financing Options</name>
        <description>Explore financing and payment plans</description>
        <arguments>/financing</arguments>
        <iconUri>/favicon-96.png</iconUri>
      </task>
    </jumplist>
    <tooltip>TIGON Private Transportation Vehicles - PTV Dealership</tooltip>
    <startscreen>
      <image src="/favicon-512.png"/>
      <color>#af1b30</color>
    </startscreen>
  </msapplication>
</browserconfig>
